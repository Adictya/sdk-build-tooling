{
  "files": ["./src/index.ts"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "DOM"],
    "paths": {
      "agora-rtc-sdk-ng": ["./lib/agora-rtc-sdk-ng.d.ts"]
    },
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "noEmit": false,
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./types"
  },
  "plugins": [
    { "transform": "typescript-transform-paths" }
  ]
}
